{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "zig-b debug",
            "type": "shell",
            "command": "zig",
            "args": [
                "build",
                "-Doptimize=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "zig-b release safe",
            "type": "shell",
            "command": "zig",
            "args": [
                "build",
                "-Doptimize=ReleaseSafe"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "zig-b release",
            "type": "shell",
            "command": "zig",
            "args": [
                "build",
                "-Doptimize=ReleaseFast",
                "-strip"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}